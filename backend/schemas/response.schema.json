{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Response Schema",
  "description": "Esquema para respuestas de actividades",
  "properties": {
    "id": {
      "type": "string",
      "description": "Identificador único de la respuesta"
    },
    "activityId": {
      "type": "string",
      "description": "ID de la actividad asociada"
    },
    "userId": {
      "type": "string",
      "description": "ID del usuario que respondió"
    },
    "answers": {
      "type": "object",
      "description": "Respuestas del usuario"
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Puntuación obtenida"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de creación"
    }
  },
  "required": ["id", "activityId"]
}

