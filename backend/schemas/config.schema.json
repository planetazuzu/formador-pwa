{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Config Schema",
  "description": "Esquema para configuración de la aplicación",
  "properties": {
    "github": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string",
          "description": "Propietario del repositorio"
        },
        "repo": {
          "type": "string",
          "description": "Nombre del repositorio"
        },
        "token": {
          "type": "string",
          "description": "Token de acceso (no se almacena en el schema)"
        }
      }
    },
    "app": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Nombre de la aplicación"
        },
        "version": {
          "type": "string",
          "description": "Versión de la aplicación"
        }
      }
    }
  }
}

