{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Session Schema",
  "description": "Esquema para sesiones de formación",
  "properties": {
    "id": {
      "type": "string",
      "description": "Identificador único de la sesión"
    },
    "title": {
      "type": "string",
      "description": "Título de la sesión"
    },
    "description": {
      "type": "string",
      "description": "Descripción de la sesión"
    },
    "activities": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Lista de IDs de actividades"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de creación"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de última actualización"
    }
  },
  "required": ["id", "title", "activities"]
}

